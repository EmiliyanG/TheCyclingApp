<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    tools:context=".extras.ResetPassword"
    android:background="@color/custom_lightest">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="41dp"
                android:layout_height="44dp"
                android:id="@+id/imageView2"
                android:layout_gravity="center"
                android:background="@drawable/the_cycling_app_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset Your Password"
                android:id="@+id/textView2"
                android:layout_gravity="bottom|center_horizontal"
                android:textSize="27sp"
                android:textColor="@color/background"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:id="@+id/resetPassUsername"
            android:layout_gravity="center_horizontal"
            android:inputType="textNoSuggestions"
            android:textSize="20sp"
            android:textColorHint="@color/custom_medium"
            android:textColor="@color/background"
            android:background="@color/custom_lighter"
            android:hint="Username"
            android:layout_marginTop="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColorHint="@color/custom_medium"
            android:textColor="@color/background"
            android:background="@color/custom_lighter"
            android:hint="email" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/rewrtieEmail"
            android:textSize="20sp"
            android:textColorHint="@color/custom_medium"
            android:textColor="@color/background"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/custom_lighter"
            android:hint="rewrite email" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Reset"
                android:layout_weight="1"
                android:id="@+id/reset"
                android:background="@color/background"
                android:textSize="17sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_weight="1"
                android:id="@+id/cancel"
                android:background="@color/background"
                android:layout_marginLeft="10dp"
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Warning"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/red"
            android:gravity="center_horizontal"
            android:visibility="gone" />
    </LinearLayout>
</FrameLayout>
