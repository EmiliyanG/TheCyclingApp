<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.ProfileActivity"
        android:background="@color/custom_dark">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mainContainer">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/title"
                android:layout_gravity="top|center_horizontal"
                android:background="@color/background"
                android:gravity="center_horizontal"
                android:textColor="@color/custom_lighter"
                android:textSize="20sp"
                android:padding="5dp" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView2"
                android:fillViewport="false">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="6dp"
                    android:id="@+id/scrollLayout">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/profileData">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="188dp"
                            android:layout_gravity="top|center_vertical"
                            android:background="@color/custom_lighter"
                            android:id="@+id/background"
                            android:layout_marginTop="37dp">

                        </FrameLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/Container"
                            android:weightSum="1">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="left|top"
                                android:id="@+id/topContainer">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/pictureDescriptionContainer">

                                    <ImageButton
                                        android:layout_width="100dp"
                                        android:layout_height="100dp"
                                        android:id="@+id/imageButton"
                                        android:layout_marginLeft="6dp"
                                        android:layout_gravity="bottom" />

                                    <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:id="@+id/nameButtonContainer"
                                        android:gravity="bottom">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Peter Mckollins"
                                            android:id="@+id/userName"
                                            android:textSize="20sp"
                                            android:layout_marginLeft="6dp"
                                            android:textColor="@color/background" />

                                        <Button
                                            android:layout_width="wrap_content"
                                            android:layout_height="30dp"
                                            android:text="follow"
                                            android:id="@+id/button"
                                            android:layout_gravity="right"
                                            android:layout_marginRight="6dp"
                                            android:textSize="10sp"
                                            android:background="@color/custom_light"
                                            android:textColor="@color/background"
                                            android:layout_marginTop="6dp"
                                            android:visibility="visible" />
                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/bottom"
                                android:weightSum="1"
                                android:paddingLeft="6dp"
                                android:paddingRight="6dp"
                                android:background="@color/custom_lighter"
                                android:paddingBottom="6dp">

                                <View
                                    android:id="@+id/lineLeft"
                                    android:layout_height="fill_parent"
                                    android:layout_width="2dp"
                                    android:background="@color/background"
                                    android:layout_marginTop="7dp" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/infoContent"
                                    android:layout_weight="1">

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/info">

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="20dp"
                                            android:layout_height="2dp"

                                            android:id="@+id/leftLine"
                                            android:background="@color/background"
                                            android:layout_gravity="center_vertical">

                                        </LinearLayout>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="info"
                                            android:id="@+id/infoTitle"
                                            android:textColor="@color/background"
                                            android:paddingLeft="10dp"
                                            android:paddingRight="10dp" />

                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="fill_parent"
                                            android:layout_height="2dp"
                                            android:id="@+id/rightLine"
                                            android:layout_gravity="center_vertical"
                                            android:background="@color/background">

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:weightSum="2"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="6dp">

                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_width="match_parent"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:padding="6dp">


                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/thisWeek"
                                                android:id="@+id/thisWeek"
                                                android:textColor="@color/background"/>

                                            <FrameLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="2dp"
                                                android:background="@color/background"/>


                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/defaultAvgSpeed"
                                                android:id="@+id/averageSpeed"
                                                android:textSize="20sp"
                                                android:textColor="@color/background" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/weekLyAvgSpeed"
                                                android:id="@+id/averageSpeedHint"
                                                android:textColor="@color/background" />

                                            <FrameLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="2dp"
                                                android:background="@color/background"/>


                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/defaultDistance"
                                                android:id="@+id/distanceThisWeek"
                                                android:textColor="@color/background"
                                                android:textSize="20sp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/distance"
                                                android:id="@+id/distanceThisWeekHint"
                                                android:textColor="@color/background" />

                                            <FrameLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="2dp"
                                                android:background="@color/background"/>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/defaultHours"
                                                android:id="@+id/hoursThisWeek"
                                                android:textColor="@color/background"
                                                android:textSize="20sp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/hoursCycling"
                                                android:id="@+id/hoursThisWeekHint"
                                                android:textColor="@color/background" />

                                        </LinearLayout>
                                        <View
                                            android:id="@+id/separator"
                                            android:layout_height="fill_parent"
                                            android:layout_width="2dp"
                                            android:background="@color/background"
                                             />
                                        <LinearLayout
                                            android:orientation="vertical"
                                            android:layout_weight="1"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:padding="6dp">
                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/total"
                                                android:id="@+id/total"
                                                android:textColor="@color/background"/>

                                            <FrameLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="2dp"
                                                android:background="@color/background"/>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/defaultAvgSpeed"
                                                android:id="@+id/totalSpeed"
                                                android:textSize="20sp"
                                                android:textColor="@color/background" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/weekLyAvgSpeed"
                                                android:id="@+id/fastestSpeedHint"
                                                android:textColor="@color/background" />

                                            <FrameLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="2dp"
                                                android:background="@color/background"/>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/defaultDistance"
                                                android:id="@+id/totalDistance"
                                                android:textColor="@color/background"
                                                android:textSize="20sp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/distance"
                                                android:id="@+id/totalDistanceHint"
                                                android:textColor="@color/background" />

                                            <FrameLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="2dp"
                                                android:background="@color/background"/>

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/defaultHours"
                                                android:id="@+id/totalHours"
                                                android:textColor="@color/background"
                                                android:textSize="20sp" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/hoursCycling"
                                                android:id="@+id/totalHoursHint"
                                                android:textColor="@color/background" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="2dp"
                                        android:background="@color/background"/>

                                </LinearLayout>

                                <View
                                    android:id="@+id/lineRight"
                                    android:layout_height="fill_parent"
                                    android:layout_width="2dp"
                                    android:background="@color/background"
                                    android:layout_marginTop="7dp" />
                            </LinearLayout>

                        </LinearLayout>


                    </FrameLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more"
                        android:id="@+id/loadMore"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="20dp" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/loadWorkoutsProgressBar"
                        android:layout_gravity="center_horizontal"
                        android:indeterminateOnly="false"
                        android:indeterminate="true"
                        android:visibility="gone" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/menuButton"
            android:layout_gravity="start|bottom"
            android:background="@drawable/menu_button"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="6dp"
            android:contentDescription="menu button"
            android:layout_marginBottom="6dp"
            android:alpha="0.9" />

    </FrameLayout>
    <ListView
        android:id="@+id/drawerList"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/background">
    </ListView>
</android.support.v4.widget.DrawerLayout>